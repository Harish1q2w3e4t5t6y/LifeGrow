    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M2,12 L4,12" />
    <!-- 10 o'clock (300°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M3.34,7 L5.07,8" />
    <!-- 11 o'clock (330°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M7,3.34 L8,5.07" />

    <!-- Clock Hands indicating 12:15 but shifted down further (now showing as if lowered by 1 unit) -->
    <!-- Hour hand (small arrow) -->
    <path
        android:strokeWidth="1.2"
        android:strokeColor="#FF000000"
        android:strokeLineCap="round"
        android:pathData="M12,13 L8.98,10.96" />
    <!-- Minute hand (tall arrow) -->
    <path
        android:strokeWidth="1.3"
        android:strokeColor="#FF000000"
        android:strokeLineCap="round"
        android:pathData="M12,13 L15.92,9.10" />
