    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M12,2 L12,4" />
    <!-- 1 o'clock (30° clockwise from 12) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M17,3.34 L16,5.07" />
    <!-- 2 o'clock (60°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M20.66,7 L18.93,8" />
    <!-- 3 o'clock (90°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M22,12 L20,12" />
    <!-- 4 o'clock (120°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M20.66,17 L18.93,16" />
    <!-- 5 o'clock (150°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M17,20.66 L16,18.93" />
    <!-- 6 o'clock (180°) -->
    <path android:strokeWidth="2" android:strokeColor="#FF000000" android:strokeLineCap="round"
        android:pathData="M12,22 L12,20" />
